<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MqttDroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent1_lighter</item>
        <item name="colorPrimaryVariant">@color/accent1_lighter</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent3_500</item>
        <item name="colorSecondaryVariant">@color/accent3_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/Theme.MqttDroid.AlertDialog</item>
        <item name="preferenceTheme">@style/Theme.MqttDroid.Preference.Light</item>
    </style>

    <style name="Theme.MqttDroid.Preference.Light" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/PreferenceMaterialSwitch</item>
        <item name="android:tint">@android:color/black</item>
    </style>
    <style name="PreferenceMaterialSwitch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/preference_switch</item>
    </style>

    <style name="Theme.MqttDroid.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:layout" tools:ignore="PrivateResource">@layout/m3_alert_dialog</item>
    </style>
</resources>